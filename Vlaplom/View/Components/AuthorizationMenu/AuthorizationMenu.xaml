<UserControl x:Class="Vlaplom.View.Components.AuthorizationMenu.AuthorizationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vlaplom.View.Components.AuthorizationMenu"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid MinWidth="600" MinHeight="415">
            <Grid.RowDefinitions>
                <RowDefinition Height="150*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>


            <Image Grid.Row="0" Style="{StaticResource EngineLogo}"/>
            <TextBlock Text="EngineForge"
                       Grid.Row="1"
                       Height="36"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="28"/>

            <TextBlock Text="Логин"
                       Grid.Row="2"
                       Height="20"
                       Margin="48, 5, 0, 0"
                       FontSize="15"/>
            <TextBox Text="{Binding Login}"
                     Grid.Row="3"
                     Width="505" 
                     Height="35"
                     FontSize="18"
                     VerticalContentAlignment="Center"/>

            <TextBlock Text="Пароль"
                       Grid.Row="4"
                       Height="20"
                       Margin="48, 5, 0, 0"
                       FontSize="15"/>
            <TextBox Text="{Binding Password}"
                     Grid.Row="5"
                     Width="505"
                     Height="35"
                     FontSize="18"
                     VerticalContentAlignment="Center"/>

            <Button Content="Войти"
                    Grid.Row="7"
                    Width="505"
                    Height="45"
                    FontSize="15"
                    Command="{Binding TryLoginCommand}"/>

        </Grid>
    </Grid>
</UserControl>